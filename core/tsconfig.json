{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    // "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    // "sourceMap": true,
    "outDir": "./dist/",
    "strictNullChecks": false,
    "target": "es2015",
    "allowJs": false,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*"
  ],
}
